<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 基本应用程序主题. -->
    <style name="Theme.TodayNews" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 主品牌颜色. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- 次要品牌颜色. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- 状态栏颜色. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- 在这里自定义主题. -->
    </style>

    <style name="Theme.CommonTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 主品牌颜色. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- 次要品牌颜色. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- 状态栏颜色. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- 在这里自定义主题. -->
        <item name="android:windowLightStatusBar">true</item> <!--系统状态的那些文字图标就会变成黑色-->
    </style>

</resources>